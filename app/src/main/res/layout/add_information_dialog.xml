<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            style="@style/header_text"
            android:layout_marginBottom="6dp"
            android:text="@string/enter_description"
            android:textSize="18sp" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/description_layout"
            style="@style/text_input_layout"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="10dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/title_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints="Item description"
                android:hint="@string/description_hint"
                android:inputType="textMultiLine"
                android:textSize="18sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            style="@style/header_text"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="6dp"
            android:text="@string/enter_rent_price"
            android:textSize="18sp" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/price_layout"
            style="@style/text_input_layout"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="10dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/title_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints="Item rent price"
                android:hint="@string/rent_price_hint"
                android:inputType="number"
                android:textSize="18sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            style="@style/header_text"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="6dp"
            android:text="@string/upload_photo"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <FrameLayout
                style="@style/action_buttons_frame_layout"
                android:layout_width="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp" >

                <TextView
                    android:id="@+id/upload_btn"
                    android:text="@string/action_select_from_gallery"
                    style="@style/action_buttons"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:textSize="15sp"/>

            </FrameLayout>

            <CheckBox
                android:id="@+id/upload_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="10dp"
                android:checked="false"
                android:clickable="false" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>